{
    "manifest_version": 2,
    "name": "Spokesman",
    "description": "This is my first Chrome extension",
    "version": "1.0",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "views/list.html"
    },
    "permissions": [
        "alarms",
        "notifications"
    ],
    "background": {
        "scripts": [
            "js/bend/lib.js",
            "js/bend/background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
